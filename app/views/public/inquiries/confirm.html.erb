<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">お問い合わせ - 確認</h2>
      <%= form_with model: @inquiry, url: inquiries_path, method: :post, local: true, data: { confirm: "お問い合わせしてよろしいですか？" } do |f| %>
        <table class="table table-striped table-bordered table-hover table-sm">
          <tr>
            <th>お問い合わせの内容</th>
            <td><%= @inquiry.genre.name %></td>
            <%= f.hidden_field :genre_id, :value => @inquiry.genre_id %>
          </tr>
          <tr>
            <th>会社名</th>
            <td><%= @inquiry.company %></td>
            <%= f.hidden_field :company, :value => @inquiry.company %>
          </tr>
          <tr>
            <th>お名前</th>
            <td><%= @inquiry.name %></td>
            <%= f.hidden_field :name, :value => @inquiry.name %>
          </tr>
          <tr>
            <th>ふりがな</th>
            <td><%= @inquiry.name_kana %></td>
            <%= f.hidden_field :name_kana, :value => @inquiry.name_kana%>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @inquiry.email %></td>
            <%= f.hidden_field :email, :value => @inquiry.email %>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @inquiry.telephone_number %></td>
            <%= f.hidden_field :telephone_number, :value => @inquiry.telephone_number %>
          </tr>
          <tr>
            <th>お問い合わせ本文</th>
            <td><%= simple_format(@inquiry.body) %></td>
            <%= f.hidden_field :body, :value => @inquiry.body %>
          </tr>
        </table>
        <div class="text-left">
          <%= link_to "＜＜戻る", root_path, class: "btn btn-primary" %>
        </div>
        <div class="text-center">
          <%= f.submit "送信＞＞", class: "btn btn-success btn-lg text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>