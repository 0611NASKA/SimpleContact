<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">お問い合わせ</h2>
      <%= form_with model: @inquiry, url: inquiries_confirm_path, method: :post, local:true do |f| %>
        <%= render 'layouts/errors', obj: @inquiry %>
        <div class="form-group">
          <%= f.label "お問い合わせ内容" %><span style="color: red;">*</span><br>
          <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, { include_blank: 'お問い合わせの内容を選択してください' }, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :company %>
          <%= f.text_field :company, placeholder: "会社名を入力してください", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :name %><span style="color: red;">*</span>
          <%= f.text_field :name, placeholder: "お名前を入力してください", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :name_kana %>
          <%= f.text_field :name_kana, placeholder: "ふりがなを入力してください", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email %><span style="color: red;">*</span>
          <%= f.text_field :email, placeholder: "メールアドレスを入力してください", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email_confirmation, "メールアドレス（確認）" %><span style="color: red;">*</span>
          <%= f.text_field :email_confirmation, placeholder: "メールアドレスを再入力してください", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :telephone_number %>
          <%= f.text_field :telephone_number, placeholder: "電話番号を入力してください", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body %><span style="color: red;">*</span>
          <%= f.text_area :body, size: "10x10", placeholder: "お問い合わせ内容をご記入ください。", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "確認する", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>