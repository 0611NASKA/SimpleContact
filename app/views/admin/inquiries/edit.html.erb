<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">お問い合わせ編集</h2>
      <%= form_with model: @inquiry, url: admin_inquiry_path, method: :patch, local:true do |f| %>
        <%= render 'layouts/errors', obj: @inquiry %>
        <div class="form-group">
          <%= f.label "お問い合わせ内容" %><br>
          <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, { include_blank: 'お問い合わせの内容を選択してください' }, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "会社名" %>
          <%= f.text_field :company, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "お名前" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "ふりがな" %>
          <%= f.text_field :name_kana, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "メールアドレス" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email_confirmation, "メールアドレス（確認）" %><span style="color: red;">*</span>
          <%= f.text_field :email_confirmation, placeholder: "メールアドレスを再入力してください", value: @inquiry.email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "電話番号" %>
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "お問い合わせ本文" %>
          <%= f.text_area :body, size: "10x10", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "削除状況" %><br>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_active, "削除済み" %><br>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_active, "削除していない" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集する", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>