<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">お問い合わせ詳細</h2>
      <table class="table table-striped table-bordered table-hover table-sm">
        <tr>
          <th>お問い合わせの内容</th>
          <td><%= @inquiry.genre.name %></td>
        </tr>
        <tr>
          <th>会社名</th>
          <td><%= @inquiry.company %></td>
        </tr>
        <tr>
          <th>お名前</th>
          <td><%= @inquiry.name %></td>
        </tr>
        <tr>
          <th>ふりがな</th>
          <td><%= @inquiry.name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @inquiry.email %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @inquiry.telephone_number %></td>
        </tr>
        <tr>
          <th>お問い合わせ本文</th>
          <td><%= simple_format(@inquiry.body) %></td>
        </tr>
        <tr>
          <th>削除状況</th>
          <td>
            <% if @inquiry.is_deleted == true %>
              削除済み
            <% else %>
              削除していない
            <% end %>
          </td>
        </tr>
      </table>
      <div class="text-left">
        <%= link_to "＜＜一覧へ戻る", admin_path, class: "btn btn-primary" %>
        <%= link_to "編集", edit_admin_inquiry_path(@inquiry), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>