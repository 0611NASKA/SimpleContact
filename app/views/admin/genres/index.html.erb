<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">お問い合わせ内容登録</h2>
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
        <%= render 'layouts/errors', obj: @genre %>
        <div class="form-group">
          <%= f.label "お問い合わせ内容" %>
          <%= f.text_field :name, placeholder: "テキスト入力", class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
      <h2 class="border-bottom">お問い合わせ内容一覧</h2>
      <% if @genres.present? %>
        <table class="table table-striped table-bordered table-hover table-sm">
          <thead>
            <tr>
              <th>お問い合わせ内容</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @genres, theme: 'twitter-bootstrap-4' %>
      <% else %>
        <p>ジャンルの情報がありません</p>
      <% end %>
    </div>
  </div>
</div>