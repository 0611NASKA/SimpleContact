<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">ジャンル編集</h2>
      <%= form_with model: @genre, url: admin_genre_path, method: :patch, local:true do |f| %>
        <%= render 'layouts/errors', obj: @genre %>
        <div class="form-group">
          <%= f.label "ジャンル名" %>
          <%= f.text_field :name, placeholder: "テキスト入力", class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>